<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.emergency_contact</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                    <group>
                        <group string="Emergency contact">
                            <field name="has_emergency_contact"/>
                        </group>
                    </group>
                </xpath>
                <notebook position="inside">
                    <page name="training" string="Emergency contact">
                        <field name="emergency_contact_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="relation"/>
                                <field name="phone" widet="phone"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>


    </data>
</odoo>
